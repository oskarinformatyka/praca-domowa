uczniowie=[]
oceny=[]
def dodaj_ocene(uczen,ocena):
    uczniowie.append(uczen)
    oceny.append(ocena)
def usun_ocene(uczen,ocena):
    uczniowie.remove(uczen)
    oceny.remove(ocena)
dodaj_ocene("Jan",3)
for x in range(len(uczniowie)):
    print(uczniowie[x-1], oceny[x-1])
print(" ")
dodaj_ocene("Maria",6)
for x1 in range(len(uczniowie)):
    print(uczniowie[x1-1], oceny[x1-1])
print("")
usun_ocene("Maria",6)
for x2 in range(len(uczniowie)):
    print(uczniowie[x2-1], oceny[x2-1])

